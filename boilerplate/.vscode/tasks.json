{
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "cmake",
      "command": "rake",
      "args": ["cmake"],
      "options": {
        "cwd": "${workspaceRoot}/tools"
      },
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "taskName": "make",
