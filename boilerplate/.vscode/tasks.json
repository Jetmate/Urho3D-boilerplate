    {
      "taskName": "run",
      "command": "native-Build/bin/Moss",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "make",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never"
      }
    }
  ]
}
